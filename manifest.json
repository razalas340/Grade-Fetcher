{
  "manifest_version": 3,
  "name": "Grade Scraper",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "scraper.png"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs", "http://localhost/*"],

  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["content.js"]
    }
  ]
}
